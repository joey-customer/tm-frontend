        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" id="UserLoginForm" method="post" accept-charset="utf-8" novalidate="novalidate">
            <div style="display:none;"><input type="hidden" name="_method" value="POST"></div>        <h3 class="form-title">ลงชื่อเข้าใช้บัญชีของคุณ</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> Enter any username and password. </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">ชื่อผู้ใช้</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input name="username" class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="ชื่อผู้ใช้" required="required" maxlength="128" type="text" id="UserUsername" aria-required="true">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input name="password" class="form-control placeholder-no-fix" autocomplete="off" placeholder="รหัสผ่าน" required="required" type="password" id="UserPassword" aria-required="true">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">OTP</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input name="data[User][otp]" class="form-control placeholder-no-fix" autocomplete="off" placeholder="OTP" type="password" id="UserOtp">
                </div>

                <!-- <h5>รับรหัส OTP ในแอป Google Authenticator</h5> -->
                <h5>หากยังไม่มี OTP <a href="javascript:void(0)" id="showQR">คลิกที่นี่เพื่อสแกน</a></h5>
                <div class="text-center" style="display:none;" id="OTPQR">
                    <img src="Login_files/chart.png" alt="">                <h5>** สามารถสแกนผ่านแอป Google Authenticator</h5>
                </div>
            </div>

            <div class="form-actions" style="margin-bottom:20px;">
                <button type="submit" class="btn green pull-right">เข้าสู่ระบบ</button>
            </div>
        </form><!-- END LOGIN FORM -->

        <script>
                $(document).ready(function () {
                    $("#showQR").on('click', function () {
                        $("#OTPQR").toggle();
